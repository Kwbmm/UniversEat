<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polito.mad.groupFive.restaurantcode">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDQhAjHBN1S0mnw5LYvJJR0-vFwJ1pdG7g" />

        <activity
            android:name=".Home.Home"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".Home.SearchMenuResults" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home.SearchMenuResults"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_menu" />
        </activity>
        <activity
            android:name=".SearchRestaurants.SearchRestaurants"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchRestaurants.SearchRestaurantResults" />
        </activity>
        <!-- Content provider for search suggestions -->
        <provider android:name=".SearchRestaurants.RestaurantSearchSuggestionProvider"
            android:authorities="it.polito.mad.groupFive.restaurantcode.SearchRestaurants.RestaurantSearchSuggestionProvider" />
        <activity
            android:name=".SearchRestaurants.SearchRestaurantResults"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_restaurant" />
        </activity>
        <activity
            android:name=".NavigationDrawer"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RestaurantManagement"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateRestaurant.CreateRestaurant"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu_details"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu_details_view"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MakeOrder"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu_view_edit"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Profile"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Order_management"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RestaurantView.User_info_view"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Login.CreateLogin"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name=".RestaurantView.Create_review" />
        <activity android:name=".CreateSimpleMenu.Create_simple_menu" />

        <service
            android:name=".Notification_Listener"
            android:exported="false"/>
    </application>

</manifest>