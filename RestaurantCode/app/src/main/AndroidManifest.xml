<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polito.mad.groupFive.restaurantcode">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResult" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationDrawer"
            android:screenOrientation="portrait"
            android:noHistory="true"
            />
        <activity
            android:name=".RestaurantManagement"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".CreateRestaurant.CreateRestaurant"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Menu_details"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity
            android:name=".Menu_details_view"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity
            android:name=".MakeOrder"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity
            android:name=".Menu_view_edit"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Profile"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:noHistory="true"
            />
        <activity
            android:name=".Order_management"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"

            />
        <activity android:name=".RestaurantView.User_info_view"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:noHistory="true"/>
        <activity android:name=".Login.CreateLogin"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:noHistory="true"
            />
        <activity android:name=".RestaurantView.Create_review"
            />
        <activity android:name=".CreateSimpleMenu.Create_simple_menu"
            />
    </application>

</manifest>