<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mad.groupFive.restaurantcode.Create_restaurant_frag">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/create_r_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Address"
            android:text="@string/frg_create_restaurant_1_textView_Address"
            android:textSize="@dimen/frg_textView_textSize"
            android:layout_below="@id/LL_imageAndRestaurantName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Address"
            android:layout_below="@id/textView_Address"
            android:inputType="text"
            />

        <!--
            For now we are just using a fixed image, as suggest by Prof. Malnati.
            Later we'll implement the google map view.
        -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/map"
            android:src="@drawable/restaurant_map_view"
            android:layout_below="@id/editText_Address"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open hour: Lunch"
            android:textSize="20dp"
            android:id="@+id/crtw_2_3"
            android:layout_below="@id/map"
            />
        <include layout="@layout/working_h_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crtw_2_3"
            android:id="@+id/list_w_h"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Next"
            android:layout_below="@id/list_w_h"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
    </RelativeLayout>
</FrameLayout>
