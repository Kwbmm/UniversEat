<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_r_2">
        <!-- Restaurant Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Address"
            android:text="@string/frg_create_restaurant_2_textView_Address"
            android:textSize="@dimen/frg_textView_textSize"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Address"
            android:layout_below="@id/textView_Address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="text"
            android:hint="@string/frg_create_restaurant_2_editView_AddressHint"
            />

        <!--
            For now we are just using a fixed image, as suggest by Prof. Malnati.
            Later we'll implement the google map view.
        -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_map"
            android:src="@drawable/restaurant_map_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/editText_Address"
            />

        <!-- Restaurant City -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_City"
            android:textSize="@dimen/frg_textView_textSize"
            android:layout_below="@id/imageView_map"
            android:text="@string/frg_create_restaurant_2_textView_City"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_City"
            android:layout_below="@id/textView_City"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="text"
            android:hint="@string/frg_create_restaurant_2_editView_CityHint"
            />

        <!-- Restaurant ZIP Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_ZIPCode"
            android:textSize="@dimen/frg_textView_textSize"
            android:layout_below="@id/editText_City"
            android:text="@string/frg_create_restaurant_2_textView_ZIPCode"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_ZIPCode"
            android:layout_below="@id/textView_ZIPCode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="number"
            android:hint="@string/frg_create_restaurant_2_editView_ZIPCodeHint"
            />

        <!-- Restaurant State -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_State"
            android:textSize="@dimen/frg_textView_textSize"
            android:layout_below="@id/editText_ZIPCode"
            android:text="@string/frg_create_restaurant_2_textView_State"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_State"
            android:layout_below="@id/textView_State"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="text"
            android:hint="@string/frg_create_restaurant_2_editView_StateHint"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button_Next"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/next"
            android:layout_below="@id/editText_State"
            android:layout_marginTop="@dimen/btn_marginTop"
            android:layout_marginRight="@dimen/btn_marginRight"
            android:layout_marginEnd="@dimen/btn_marginRight"
            />
    </RelativeLayout>
</ScrollView>