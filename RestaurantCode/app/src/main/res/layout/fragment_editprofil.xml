<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_profil"
        android:padding="10dp">

        <!-- Profile Image -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_imageText_e"
            android:text="@string/add_picture"
            android:textSize="18sp"
            android:minHeight="50dp"
            android:background="@drawable/ripple_effect"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView_UserImage_e"
            android:gravity="center_vertical"
            android:layout_below="@+id/editText_Password_e" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/imageView_UserImage_e"
            android:src="@drawable/ic_picture_black"
            android:contentDescription="@string/frg_create_restaurant_1_imageView_ContentDesc"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/textView_imageText_e"
            android:layout_marginLeft="6dp" />

        <!-- User Nickname -->

        <!-- User Password -->

        <!-- User Password repeat -->

        <!-- User mail -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Mail_old"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView24"
            android:hint="@string/old_email"
            android:background="@android:color/transparent"
            android:minHeight="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Mail_new"
            android:inputType="textEmailAddress"
            android:layout_below="@id/editText_Mail_old"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView24"
            android:hint="@string/new_email"
            android:background="@android:color/transparent"
            android:minHeight="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Password_e"
            android:inputType="textPassword"
            android:layout_below="@id/editText_Mail_new"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView25"
            android:hint="@string/password"
            android:background="@android:color/transparent"
            android:minHeight="50dp" />

        <!-- Next button -->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/imageView24"
            android:layout_alignTop="@+id/editText_Mail_old"
            android:src="@drawable/ic_email_black"
            android:layout_marginLeft="6dp"
            android:tint="@color/material_grey_600" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/imageView25"
            android:layout_alignTop="@+id/editText_Password_e"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_password_black"
            android:layout_marginLeft="6dp"
            android:tint="@color/material_grey_600" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:id="@+id/Button_Next_e"
            android:layout_below="@+id/textView_imageText_e"
            android:layout_alignParentRight="true"
            style="@style/Button" />

    </RelativeLayout>
</ScrollView>