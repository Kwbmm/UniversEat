<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/acm_3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_tw_1"
        android:textSize="20dp"
        android:text="Name" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nd_et_1"
        android:layout_below="@id/nd_tw_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_tw_2"
        android:text="Type"
        android:layout_below="@id/nd_et_1"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_type"
        android:layout_below="@id/nd_tw_2">
    </Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_tw_3"
        android:text="Cuisine"
        android:textSize="20dp"
        android:layout_below="@id/nd_type"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_type_2"
        android:layout_below="@id/nd_tw_3">
    </Spinner>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_ck_1"
        android:layout_below="@id/nd_type_2"
        android:text="Vegan"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_ck_2"
        android:layout_below="@id/nd_ck_1"
        android:text="Vegetarian"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_ck_3"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/nd_ck_1"
        android:text="Hot"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nd_ck_4"
        android:layout_below="@id/nd_ck_3"
        android:layout_alignBottom="@id/nd_ck_2"
        android:layout_alignLeft="@id/nd_ck_3"
        android:text="Gluten free"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/ll_add">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:id="@+id/ad_add"
            android:text="Add"
            />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_bar"
        android:layout_below="@id/nd_ck_2"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_shadow_start_color">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tags_label"
        android:text="Tags"
        android:layout_alignParentLeft="true"

        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
       />
    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_add_24dp"
        android:id="@+id/add_tags_but"
        android:background="#353434"
        android:layout_gravity="right"
        android:tint="#ffffff"
       />

    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/ll_bar"
    android:layout_above="@id/ll_add"
    android:id="@+id/tag_list">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/tag_list_vert">

    </LinearLayout>
</ScrollView>
</RelativeLayout>