<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".CreateMenu.Create_menu_frag"
    android:id="@+id/fcm1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cmed_1_1"
            android:inputType="textCapSentences"
            android:hint="@string/Menu_name"
            android:layout_below="@+id/cmiw_1_1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView14"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/fragment_create_simple_menu1_Menu_Image"
            android:id="@+id/image_label"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/cmiw_1_1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/cmiw_1_1"
            android:src="@drawable/ic_picture_black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scm_ll_button"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/fragment_create_simple_menu1_Send_notification"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:id="@+id/next"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:background="@color/colorAccent" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/cmed_1_2"

            android:hint="@string/frg_create_restaurant_1_textView_Description"
            android:layout_below="@+id/cmed_1_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView14" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView14"
            android:layout_alignTop="@+id/cmed_1_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:src="@drawable/ic_menu_black"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView15"
            android:layout_alignTop="@+id/cmed_1_2"
            android:layout_alignStart="@+id/cmed_1_2"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_infosquared_black"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</FrameLayout>
