<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:id="@+id/checkBox"
        android:layout_alignBottom="@id/textClock2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workingHItem_textViewFrom"
        android:id="@+id/from"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/textClock2"
        android:layout_toLeftOf="@id/textClock"
        android:layout_toStartOf="@id/textClock"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textClock"
        android:layout_toLeftOf="@id/to"
        android:layout_toStartOf="@id/to"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to"
        android:text="@string/workingHItem_textViewTo"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/textClock2"
        android:layout_toLeftOf="@id/textClock2"
        android:layout_toStartOf="@id/textClock2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textClock2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:text="15:23"
        />
</RelativeLayout>