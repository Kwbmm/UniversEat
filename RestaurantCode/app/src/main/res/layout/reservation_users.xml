<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:padding="8dp"
            android:id="@+id/card"
            android:background="@drawable/ripple_effect">

            <TextView
                android:id="@+id/order_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:text="@string/reservation_textViewUsername"
                android:textColor="#DE000000"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView35"
                android:gravity="center_vertical"
                android:layout_below="@+id/order_meal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/order_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:text="@string/reservation_textViewOrder"
                android:textSize="20sp"
                android:textColor="#DE000000"
                android:layout_toRightOf="@+id/imageView34"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/order_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:textSize="14sp"
                android:textColor="#DE000000"
                android:layout_toRightOf="@+id/imageView36"
                android:layout_marginLeft="10dp"
                android:text="notes"
                android:gravity="center_vertical"
                android:layout_alignTop="@+id/imageView36"
                android:textStyle="italic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:minHeight="25dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="@string/reservation_month"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:textColor="#DE000000"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_clock_black"
                android:tint="#DE000000" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView34"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:src="@drawable/ic_menu_black"
                android:tint="#DE000000"
                android:layout_below="@+id/date"
                android:layout_above="@+id/imageView35" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView35"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:src="@drawable/ic_restaurant_building_black"
                android:tint="#DE000000"
                android:layout_below="@+id/order_meal"
                android:layout_above="@+id/imageView36" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView36"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:src="@drawable/ic_pen_black"
                android:tint="#DE000000"
                android:layout_below="@+id/order_username" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>