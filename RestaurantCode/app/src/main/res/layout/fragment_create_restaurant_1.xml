<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mad.groupFive.restaurantcode.Create_restaurant_frag">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/create_r_1">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/rest_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:background="#fefeff"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant name:"
            android:textSize="20dp"
            android:id="@+id/crtw_1_1"
            android:layout_below="@id/rest_image"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/crtw_1_1"
            android:id="@+id/cred_1_1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="20dp"
            android:id="@+id/crtw_1_2"
            android:layout_below="@id/cred_1_1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/crtw_1_2"
            android:id="@+id/cred_1_2"
            />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/cred_1_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="20dp"
            android:id="@+id/crtw_1_3"
            android:layout_below="@id/map"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/crtw_1_3"
            android:id="@+id/cred_1_3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cred_1_3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Next"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
    </RelativeLayout>
</FrameLayout>
