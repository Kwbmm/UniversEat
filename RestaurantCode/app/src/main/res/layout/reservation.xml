<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/order_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date"
                android:layout_toLeftOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageView"
                android:text="@string/reservation_textViewUsername"
                android:textColor="#DE000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/order_username"
                android:text="@string/reservation_textViewOrder"
                android:textSize="20sp"
                android:textColor="#8A000000" />

            <TextView
                android:id="@+id/order_OID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/order_userID"
                android:layout_gravity="right|bottom"
                android:text="OID"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp"
                android:textColor="#8A000000" />

            <ImageButton
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete_black_24px"
                android:backgroundTint="#ffffff"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:text="@string/reservation_month"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:textColor="#8A000000" />

            <TextView
                android:id="@+id/order_userID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_notes"
                android:text="123123"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp"
                android:textColor="#8A000000" />

            <TextView
                android:id="@+id/order_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/order_meal"
                android:textSize="14sp"
                android:textColor="#8A000000" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>