<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_log_1">
        <!-- User name -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_UserName"
            android:inputType="textCapWords"
            android:hint="@string/username"
            android:layout_toRightOf="@+id/imageView10"
            android:textSize="16sp"
            android:textColor="#DE000000"
            android:textColorHint="#8A000000" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/surname"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_marginRight="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_surname"
            android:inputType="textCapWords"
            android:hint="@string/surname"
            android:layout_below="@id/editText_UserName"
            android:layout_toRightOf="@+id/imageView10"
            android:textSize="16sp"
            android:textColor="#DE000000"
            android:textColorHint="#8A000000" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_imageText"
            android:text="@string/add_picture"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/imageView_UserImage"
            android:layout_marginLeft="16dp"
            android:minHeight="48dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/password2"
            android:background="@drawable/ripple_effect"
            android:textColor="#DE000000"
            android:textColorHint="#8A000000"
            android:layout_marginRight="8dp"
            android:paddingLeft="4dp" />


        <ImageView
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:id="@+id/imageView_UserImage"
        android:src="@drawable/ic_picture_black"
        android:contentDescription="@string/frg_create_restaurant_1_imageView_ContentDesc"
        android:layout_marginLeft="6dp"
        android:layout_alignTop="@+id/textView_imageText" />
        <!-- User Nickname -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nickname"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/surname"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Nickname"
            android:inputType="text"
            android:hint="@string/nickname"
            android:layout_below="@+id/editText_surname"
            android:layout_toRightOf="@+id/imageView11"
            android:textSize="16sp"
            android:textColor="#DE000000"
            android:textColorHint="#8A000000" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/mail"
            android:layout_toRightOf="@+id/imageView12"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp">
        <!-- User Password -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Password"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:layout_below="@id/editText_Nickname"
            android:layout_toRightOf="@+id/imageView12"
            android:textSize="16sp"
            android:textColor="#DE000000"
            android:textColorHint="#8A000000" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password2"
            android:layout_below="@+id/password"
            android:layout_toRightOf="@+id/imageView12"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp">
        <!-- User Password repeat -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Password_repeat"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:inputType="textPassword"
            android:hint="@string/password_repeat"
            android:layout_below="@id/editText_Password"
            android:layout_toRightOf="@+id/imageView12"
            android:textSize="16sp"
            android:textColor="#DE000000"
            android:textColorHint="#8A000000" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mail"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/nickname"
            android:layout_toRightOf="@+id/imageView13"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp">
        <!-- User mail -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Mail"
            android:inputType="textEmailAddress"
            android:hint="@string/emailaddress"
            android:layout_below="@id/editText_Password_repeat"
            android:layout_toRightOf="@+id/imageView13"
            android:textSize="16sp"
            android:textColor="#DE000000"
            android:textColorHint="#8A000000" />
        </android.support.design.widget.TextInputLayout>

        <!-- Next button -->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:id="@+id/imageView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignTop="@+id/name"
            android:src="@drawable/ic_user_black"
            android:tint="@color/material_grey_600"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:id="@+id/imageView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignTop="@+id/nickname"
            android:src="@drawable/ic_name_black"
            android:tint="@color/material_grey_600"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:id="@+id/imageView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignTop="@+id/password"
            android:src="@drawable/ic_password_black"
            android:tint="@color/material_grey_600"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:id="@+id/imageView13"
            android:layout_alignTop="@+id/mail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:src="@drawable/ic_email_black"
            android:tint="@color/material_grey_600"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:id="@+id/imageView31"
            android:src="@drawable/ic_user_black"
            android:tint="@color/material_grey_600"
            android:layout_alignTop="@+id/surname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:id="@+id/imageView32"
            android:src="@drawable/ic_password_black"
            android:tint="@color/material_grey_600"
            android:layout_alignTop="@+id/password2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:id="@+id/Button_Next"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView_imageText"
            style="@style/Button" />

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/progressBar7"
            android:visibility="invisible"
            android:layout_alignTop="@+id/Button_Next"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</ScrollView>