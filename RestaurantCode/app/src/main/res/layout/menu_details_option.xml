<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/menu_card"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/optionList"
        android:layout_alignEnd="@+id/optionList">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:id="@+id/menu_view_layout">

            <TextView
                android:id="@+id/option_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option Name"
                android:textSize="25dp"
                android:textStyle="bold"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/courseList"
        android:headerDividersEnabled="false"
        android:divider="@color/material_grey_100"
        android:padding="10dp"
        android:layout_below="@+id/menu_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>