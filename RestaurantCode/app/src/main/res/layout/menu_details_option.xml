<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/menu_card"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:id="@+id/menu_view_layout">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/course_image"/>

            <TextView
                android:id="@+id/course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option Name"
                android:layout_toRightOf="@id/course_image"
                android:textSize="25dp"
                android:textStyle="bold"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/course_description"
                android:layout_below="@id/course_name"
                android:layout_toRightOf="@id/course_image"
                android:textSize="18dp"
                android:text="Description:"
                android:maxLength="150"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choice "
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="n"
        android:id="@+id/option_number"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:id="@+id/spinner2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/option_number"
        android:layout_toEndOf="@+id/option_number"
        android:layout_marginLeft="20dp" />
</RelativeLayout>