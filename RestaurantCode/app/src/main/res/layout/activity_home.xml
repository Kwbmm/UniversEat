<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mad.groupFive.restaurantcode.Home"
    android:id="@+id/main"
    android:background="@color/material_grey_100">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opt"
        android:contextClickable="true"
        android:src="@drawable/ic_settings_black"
        android:backgroundTint="@color/material_grey_100"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/home_imageButtonOpt_contentDesc"
        />

    <android.support.v7.widget.SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_view"
        android:queryHint="@string/search_hello"
        android:divider="#000000"
        android:dividerPadding="1dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/opt"
        android:layout_toStartOf="@id/opt"
        android:focusable="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dropdown_option"
        android:layout_below="@id/search_view"
        android:orientation="vertical">

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_menu_rw"
        android:layout_below="@id/dropdown_option"
        android:focusable="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
