<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/restaurant_card"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true"
    android:background="#ffffff"
    android:minHeight="160dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="5dp"
        android:id="@+id/restaurant_view_layout"
        android:minHeight="140dp">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_star_border_black_24dp"
            android:background="#ffffff"
            android:id="@+id/restaurant_favourite"
            />
        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restaurantView_textViewRestaurantName"
            android:textSize="@dimen/textSizeTitle"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/restaurant_image"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_below="@id/restaurant_favourite"
            android:layout_toLeftOf="@id/restaurant_favourite"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/restaurant_name"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/restaurant_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restaurant_rating"
            android:layout_toRightOf="@id/restaurant_image"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_below="@id/restaurant_name"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="3.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_rating"
            android:layout_alignParentRight="true"
            android:text="2km"
            android:textSize="20dp"
            android:id="@+id/restaurant_distance"
            android:layout_marginRight="5dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/restaurant_address"
            android:layout_below="@id/restaurant_rating"
            android:textSize="@dimen/textSizeNormal"
            android:layout_toRightOf="@id/restaurant_image"
            android:text="@string/restaurantView_textViewRestaurantAddress"
            android:layout_toLeftOf="@id/restaurant_distance"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>