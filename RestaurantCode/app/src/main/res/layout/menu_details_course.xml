<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="5dp"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_hot"
        android:src="@drawable/ic_hot_black"
        android:layout_toLeftOf="@+id/img_nogluten"
        android:tint="#a60101"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_nogluten"
        android:src="@drawable/ic_nogluten_black"
        android:layout_toLeftOf="@+id/img_vgt"
        android:tint="#c8a004"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_vgn"
        android:src="@drawable/ic_vegan_black"
        android:layout_alignParentRight="true"
        android:tint="#007f24"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_vgt"
        android:src="@drawable/ic_vegetarian_black"
        android:layout_toLeftOf="@+id/img_vgn"
        android:tint="#951f9b"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Course Name"
        android:id="@+id/course_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:maxWidth="250dp" />
</RelativeLayout>

